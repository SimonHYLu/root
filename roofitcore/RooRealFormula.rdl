#ifndef ROO_REAL_FORMULA
#define ROO_REAL_FORMULA

#include "RooFitCore/RooAbsReal.hh"
#include "RooFitCore/RooFormula.hh"
class RooArgSet ;

class RooRealFormula : public RooAbsReal {
public:
  // Constructors, assignment etc
  inline RooRealFormula() { }
  RooRealFormula(const char *name, const char *title, RooArgSet& dependents);
  RooRealFormula(const RooRealFormula& other);
  RooRealFormula& operator=(RooRealFormula& other) {} ;
  virtual ~RooRealFormula();

  // Formula editing interface
  Bool_t setFormula(const char* formula) ;

  // I/O streaming interface (machine readable)
  virtual Bool_t readFromStream(istream& is, Bool_t compact, Bool_t verbose=kFALSE) ;
  virtual void writeToStream(ostream& os, Bool_t compact) const ;

  // Printing interface (human readable)
  virtual void printToStream(ostream& stream, PrintOption opt=Standard) const ;

  // Debugging
  void dumpFormula() { _formula.dump() ; }

protected:
  
  // Function evaluation
  virtual Double_t evaluate() const ;

  // Post-processing of server redirection
  virtual Bool_t redirectServersHook(RooArgSet& newServerList, Bool_t mustReplaceAll=kFALSE) ;

  virtual Bool_t isValid() const ;
  virtual Bool_t isValid(Double_t value) const ;

  RooFormula _formula ; // Formula engine 

  ClassDef(RooRealFormula,1) // a real-valued variable and its value
};

#endif
