#ifndef ROO_UNBLIND_CPDELTAT_VAR
#define ROO_UNBLIND_CPDELTAT_VAR

#include "RooFitCore/RooBlindTools.hh"
#include "RooFitCore/RooDerivedReal.hh"
#include "RooFitCore/RooAbsCategory.hh"

class RooUnblindCPDeltaTVar : public RooDerivedReal {
public:
  // Constructors, assignment etc
  inline RooUnblindCPDeltaTVar() ;
  RooUnblindCPDeltaTVar(const char *name, const char *title, 
			const char *blindString,
			RooAbsReal& deltat, RooAbsCategory& tag, 
			RooAbsCategory& blindState);
  RooUnblindCPDeltaTVar(const char* name, const RooUnblindCPDeltaTVar& other);
  virtual TObject* Clone() { return new RooUnblindCPDeltaTVar(*this); }  
  virtual ~RooUnblindCPDeltaTVar();

  // I/O streaming interface (machine readable)
  virtual Bool_t readFromStream(istream& is, Bool_t compact, Bool_t verbose=kFALSE) ;
  virtual void writeToStream(ostream& os, Bool_t compact) const ;

  // Printing interface (human readable)
  virtual void printToStream(ostream& stream, PrintOption opt=Standard) const ;


protected:

  RooUnblindCPDeltaTVar& operator=(const RooUnblindCPDeltaTVar& other) {} ;
  
  // Only PDFs can access the unblinded values
  friend class RooAbsPdf ;
  
  // Function evaluation
  virtual Double_t evaluate() const ;

  virtual Bool_t isValid() const ;
  virtual Bool_t isValid(Double_t value, Bool_t verbose=kFALSE) const ;

  // Post-processing of server redirection
  virtual Bool_t redirectServersHook(RooArgSet& newServerList, Bool_t mustReplaceAll=kFALSE) ;

  RooAbsReal* _deltat ;
  RooAbsCategory* _tag ;
  RooAbsCategory* _state ;
  RooBlindTools _blindEngine ;

  ClassDef(RooUnblindCPDeltaTVar,1) // a real-valued variable and its value
};

#endif
