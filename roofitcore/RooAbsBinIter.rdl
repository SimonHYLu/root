#ifndef ROO_ABS_BIN_ITER
#define ROO_ABS_BIN_ITER

#include <iostream.h>
#include "RooFitCore/RooAbsArg.hh"


class RooAbsBinIter {
public:

  // Constructors, assignment etc.
  RooAbsBinIter(const RooAbsArg& arg) ;
  RooAbsBinIter(const RooAbsBinIter& other) ;
  virtual ~RooAbsBinIter() ;

  // Iterator implementation
  virtual RooAbsArg* next() = 0 ;
  virtual void reset() = 0 ;
  
  virtual Double_t currentCenter() const = 0 ;
  virtual Double_t currentLow() const = 0 ;
  virtual Double_t currentHigh() const = 0 ;

protected:

  RooAbsArg* _arg ;
  Int_t _curBin ;

  ClassDef(RooAbsBinIter,0) // Iterator over all bins of a RooAbsArg
};

#endif
