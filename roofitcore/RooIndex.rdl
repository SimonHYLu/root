#ifndef ROO_INDEX
#define ROO_INDEX

#include <iostream.h>
#include "RooFitCore/RooAbsIndex.hh"

class RooIndex : public RooAbsIndex {
public:
  RooIndex() {} ;
  virtual ~RooIndex();

  RooIndex(const char *name, const char *title);
  RooIndex(const RooIndex& other) ;

  virtual RooAbsArg& operator=(RooAbsArg& other) ; 
  virtual Bool_t isDerived() const { return kFALSE; }

  Bool_t setIndex(Int_t index) ;
  Bool_t setLabel(char* label) ;
  
  // I/O streaming interface
  virtual Bool_t readFromStream(istream& is, Bool_t compact, Bool_t verbose=kFALSE) ;
  virtual void writeToStream(ostream& os, Bool_t compact) ;
  virtual void PrintToStream(ostream& stream, Option_t* = 0) ;

protected:
  virtual void attachToTree(TTree& t, Int_t bufSize=32000) ;

  ClassDef(RooIndex,1) // a real-valued variable and its value
};

#endif
