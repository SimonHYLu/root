#ifndef ROO_REAL_FUNC1D
#define ROO_REAL_FUNC1D

#include "RooFitCore/RooAbsFunc1D.hh"

class RooAbsReal;
class RooRealVar;
class RooArgSet;
class RooRealIntegral;

class RooRealFunc1D : public RooAbsFunc1D {
public:
  RooRealFunc1D(const RooAbsReal &func, RooRealVar &x, Double_t scaleFactor= 1,
		const RooArgSet *normVars= 0);
  virtual ~RooRealFunc1D();
  // evaluation
  virtual Double_t operator()(Double_t x) const;
protected:
  const RooAbsReal *_funcPtr;
  mutable RooRealVar *_xPtr;
  Double_t _scale;
  RooRealIntegral *_projected;
  ClassDef(RooRealFunc1D,0) // 1-dimensional function derived from an AbsReal object
};

#endif
