#ifndef ROO_NORM
#define ROO_NORM

#include "RooFitCore/RooAbsPdf.hh"
#include "RooFitCore/RooRealProxy.hh"

class RooNorm : public RooAbsPdf {
public:

  RooNorm(const char *name, const char *title, const RooAbsReal& norm);
  RooNorm(const RooNorm& other, const char* name=0) ;
  virtual TObject* clone(const char* newname) const { return new RooNorm(*this,newname) ; }
  virtual ~RooNorm() {} ;

  Double_t evaluate() const { return 1.0 ; }
  virtual Bool_t selfNormalized() const { return kTRUE ; }
  virtual Bool_t canBeExtended() const { return kTRUE ; }
  virtual Double_t expectedEvents() const { return _n ; }

protected:

  RooRealProxy _n ;   // Number of expected events

  ClassDef(RooNorm,0) // Flat PDF introducing an extended likelihood term
};

#endif
