#ifndef ROO_ABS_FUNC1D
#define ROO_ABS_FUNC1D

#include "Rtypes.h"

class RooAbsFunc1D {
public:
  RooAbsFunc1D();
  virtual ~RooAbsFunc1D();
  // evaluation
  virtual Double_t operator()(Double_t x) const = 0;
  // numerical methods
  virtual Double_t integral(Double_t x1, Double_t x2, Double_t tol= 1e-4) const;
  ClassDef(RooAbsFunc1D,0) // an abstract 1-dim func interface and numerical methods
};

#endif

